<Window
    x:Class="Gouter.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Gouter.Views"
    xmlns:vm="clr-namespace:Gouter.ViewModels"
    xmlns:app="clr-namespace:Gouter"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:b="clr-namespace:Gouter.Behaviors"
    xmlns:conv="clr-namespace:Gouter.Converters"
    xmlns:cnm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    mc:Ignorable="d"
    Title="Gouter" Height="450" Width="800"
    UseLayoutRounding="True"
    FontFamily="Meiryo"
    DataContext="{app:ViewModelConnector vm:MainWindowViewModel}"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="ItemsPanelTemplate">
            <VirtualizingStackPanel Orientation="Vertical" />
        </ItemsPanelTemplate>

        <conv:DurationConverter x:Key="DurationConverter" />
        <conv:MillisecondsToTimeStringConverter x:Key="MillisecondsToTimeStringConverter" />

        <CollectionViewSource
            x:Key="TracksCollectionViewSource"
            Source="{Binding SelectedAlbumPlaylist.Tracks, Mode=OneWay}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="DiskNumber" />
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <cnm:SortDescription PropertyName="DiskNumber" />
                <cnm:SortDescription PropertyName="TrackNumber" />
                <cnm:SortDescription PropertyName="Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <Duration x:Key="AnimateDuration">0:0:0.5</Duration>
        <KeyTime x:Key="AnimationEndKeyTime">0:0:0.5</KeyTime>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="ContentRendered">
            <i:InvokeCommandAction Command="{Binding InitializeCommand, Mode=OneTime}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding OnCloseCommand, Mode=OneTime}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel LastChildFill="True">
        <Border
            Height="55"
            DockPanel.Dock="Top"
            BorderThickness="0,0,0,1"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <DockPanel>
                <StackPanel
                    Margin="18,0"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Margin="3" Padding="6"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Command="{Binding PreviousTrackCommand, Mode=OneTime}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastRewind}" />
                    </Button>
                    <Button
                        Padding="12"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Command="{Binding PlayCommand, Mode=OneTime}"
                        b:ElementBehavior.IsCollapse="{Binding Player.IsPlaying, Mode=OneWay}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.PlayArrow}" />
                    </Button>
                    <Button
                        Padding="12"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Command="{Binding PauseCommand, Mode=OneTime}"
                        b:ElementBehavior.Visible="{Binding Player.IsPlaying, Mode=OneWay}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.Pause}" />
                    </Button>
                    <Button
                        Margin="3" Padding="6"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Command="{Binding NextTrackCommand, Mode=OneTime}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastForward}" />
                    </Button>
                </StackPanel>

                <StackPanel
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Padding="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="16" Height="16"
                            Data="{StaticResource MaterialIcons.VolumeUp}" />
                    </Button>

                    <Slider
                        Width="80"
                        IsMoveToPointEnabled="True"
                        Minimum="0.0" Maximum="1.0"
                        Value="{Binding Player.Volumne, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel
                    Margin="12,0"
                    DockPanel.Dock="Right"
                    Orientation="Vertical"
                    VerticalAlignment="Center">
                    <CheckBox
                        Content="ループ再生"
                        IsChecked="{Binding IsLoop, Mode=TwoWay}" />

                    <CheckBox
                        Content="シャッフル再生" 
                        IsChecked="{Binding IsShuffle, Mode=TwoWay}" />
                </StackPanel>

                <DockPanel
                    Margin="18,0,12,0"
                    DockPanel.Dock="Left">
                    <Image
                        DockPanel.Dock="Left"
                        Height="54" Width="54"
                        b:TrackBehavior.AlbumArt="{Binding Player.CurrentTrack, Mode=OneWay}"
                        RenderOptions.BitmapScalingMode="HighQuality" />

                    <Slider
                        Margin="6,0,6,6"
                        Minimum="0"
                        IsMoveToPointEnabled="True"
                        Value="{Binding Player.CurrentTime, Mode=TwoWay}"
                        Maximum="{Binding Player.Duration, Mode=OneWay}"
                        ToolTip="{Binding Player.CurrentTime, Mode=OneWay, Converter={StaticResource MillisecondsToTimeStringConverter}}"
                        DockPanel.Dock="Bottom" />

                    <TextBlock
                        Margin="6"
                        DockPanel.Dock="Right"
                        VerticalAlignment="Center">
                        <Run Text="{Binding Player.CurrentTime, Mode=OneWay, Converter={StaticResource MillisecondsToTimeStringConverter}}" /><!--
                     --><Run Text=" / " /><!--
                     --><Run Text="{Binding Player.Duration, Mode=OneWay, Converter={StaticResource MillisecondsToTimeStringConverter}}" />
                    </TextBlock>

                    <TextBlock
                        Margin="12,6,6,6"
                        Text="{Binding Player.CurrentTrack.Title}"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis" />
                </DockPanel>
            </DockPanel>
        </Border>

        <StatusBar
            Padding="4,2"
            DockPanel.Dock="Bottom"
            BorderThickness="0,1,0,0"
            FontFamily="Meiryo"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <StatusBarItem>
                <ProgressBar
                    Width="120"
                    Height="16"
                    Value="{Binding LoadProgress.CurrentCount, Mode=OneWay}"
                    Maximum="{Binding LoadProgress.MaxCount, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator
                Margin="8,2"
                Background="{StaticResource ToolBar.Static.BorderBrush}" />
            <StatusBarItem>
                <TextBlock Text="{Binding Status, Mode=OneWay}" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TabControl>
                <TabItem Header="アルバム">
                    <ListBox
                        DockPanel.Dock="Left"
                        Grid.Column="0"
                        BorderThickness="0"
                        SelectionMode="Single"
                        AlternationCount="2"
                        ItemsPanel="{StaticResource ItemsPanelTemplate}"
                        VirtualizingPanel.ScrollUnit="Item"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        ItemsSource="{Binding Albums, Mode=OneTime}"
                        SelectedItem="{Binding SelectedAlbum, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding DataContext.AlbumPlaylistSelectedCommand, Mode=OneTime, RelativeSource={RelativeSource AncestorType=view:MainWindow}}"  />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                <Setter Property="Padding" Value="8" />
                                <Setter Property="Height" Value="64" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </TabItem>
            </TabControl>

            <GridSplitter
                Grid.Column="1"
                Width="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Center"
                Background="{StaticResource ToolBar.Static.BorderBrush}" />

            <Grid Grid.Column="2">
                <Grid.Resources>
                    <Storyboard
                        x:Key="OpenTrackListPanel"
                        Storyboard.Target="{Binding ElementName=albumTracKListContainer}">
                        <ObjectAnimationUsingKeyFrames
                            Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
                        </ObjectAnimationUsingKeyFrames>
                        <BooleanAnimationUsingKeyFrames
                            Storyboard.TargetProperty="IsHitTestVisible"
                            Duration="{StaticResource AnimateDuration}">
                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True" />
                        </BooleanAnimationUsingKeyFrames>
                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                            Duration="{StaticResource AnimateDuration}"
                            To="0.0">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            Duration="{StaticResource AnimateDuration}"
                            To="1.0">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>

                    <Storyboard
                        x:Key="CloseTrackListPanel"
                        Storyboard.Target="{Binding ElementName=albumTracKListContainer}">
                        <ObjectAnimationUsingKeyFrames
                            Storyboard.TargetProperty="Visibility"
                            Duration="{StaticResource AnimateDuration}">
                            <DiscreteObjectKeyFrame KeyTime="{StaticResource AnimationEndKeyTime}" Value="{x:Static Visibility.Collapsed}" />
                        </ObjectAnimationUsingKeyFrames>
                        <BooleanAnimationUsingKeyFrames
                            Storyboard.TargetProperty="IsHitTestVisible"
                            Duration="{StaticResource AnimateDuration}">
                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                        </BooleanAnimationUsingKeyFrames>
                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                            Duration="{StaticResource AnimateDuration}"
                            To="50.0">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            Duration="{StaticResource AnimateDuration}"
                            To="0.0">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </Grid.Resources>

                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl
                        ItemsSource="{Binding Albums, Mode=OneTime}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel
                                    Width="{Binding ViewportWidth, RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}}}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type app:AlbumInfo}">
                                <Button
                                    Background="White"
                                    Command="{Binding DataContext.SelectAlbumPlaylistCommand, RelativeSource={RelativeSource AncestorType={x:Type view:MainWindow}}, Mode=OneTime}"
                                    CommandParameter="{Binding Mode=OneWay}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Margin" Value="20" />
                                            <Setter Property="Cursor" Value="Hand" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border
                                                            x:Name="border"
                                                            Padding="{TemplateBinding Padding}"
                                                            Background="{TemplateBinding Background}">
                                                            <Border.Effect>
                                                                <DropShadowEffect
                                                                    BlurRadius="30"
                                                                    ShadowDepth="0"
                                                                    Opacity="0.0"
                                                                    Color="#CCCCCC"/>
                                                            </Border.Effect>
                                                            <ContentPresenter
                                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Grid Width="160">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Image
                                            Width="160" Height="160"
                                            Source="{Binding Album.Artwork, Mode=OneWay}"
                                            RenderOptions.BitmapScalingMode="HighQuality" />

                                        <TextBlock
                                            Grid.Row="1"
                                            TextAlignment="Center"
                                            Text="{Binding Album.Name, Mode=OneWay}"
                                            TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Grid
                    x:Name="albumTracKListContainer"
                    Background="White"
                    Visibility="Visible"
                    IsHitTestVisible="False"
                    Opacity="0.0"
                    RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TranslateTransform Y="50.0" />
                    </Grid.RenderTransform>

                    <i:Interaction.Triggers>
                        <i:DataTrigger Binding="{Binding IsOpenAlbumPlaylistTrackList, Mode=OneWay}" Value="True">
                            <i:ControlStoryboardAction
                                Storyboard="{StaticResource OpenTrackListPanel}"
                                ControlStoryboardOption="Play" />
                        </i:DataTrigger>

                        <i:DataTrigger Binding="{Binding IsOpenAlbumPlaylistTrackList, Mode=OneWay}" Value="False">
                            <i:ControlStoryboardAction
                                Storyboard="{StaticResource CloseTrackListPanel}"
                                ControlStoryboardOption="Play" />
                        </i:DataTrigger>
                    </i:Interaction.Triggers>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0" Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="6,6,0,0">
                            <Hyperlink
                                Command="{Binding CloseAlbumPlaylistTrackListCommand, Mode=OneTime}">
                                <Run Text="« アルバム一覧に戻る" />
                            </Hyperlink>
                        </TextBlock>

                        <Image
                            Grid.Column="0" Grid.Row="1"
                            Grid.RowSpan="2"
                            Margin="14"
                            Width="160" Height="160"
                            VerticalAlignment="Top"
                            Source="{Binding SelectedAlbumPlaylist.Album.Artwork, Mode=OneWay}"
                            RenderOptions.BitmapScalingMode="HighQuality" />

                        <StackPanel
                            Grid.Column="1" Grid.Row="1"
                            Margin="0,12,12,12">
                            <TextBlock
                                FontSize="18pt"
                                Text="{Binding SelectedAlbumPlaylist.Name, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding SelectedAlbumPlaylist.Name, Mode=OneWay}"/>
                            <TextBlock
                                Foreground="#0077CC"
                                Text="{Binding SelectedAlbumPlaylist.Album.Artist, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis" />
                        </StackPanel>

                        <app:ListViewEx
                            Grid.Column="1" Grid.Row="2"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.ScrollUnit="Pixel"
                            VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            AlternationCount="2"
                            BorderThickness="0,1,0,0"
                            ItemsPanel="{StaticResource ItemsPanelTemplate}"
                            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
                            ItemsSource="{Binding Source={StaticResource TracksCollectionViewSource}}"
                            SelectedItem="{Binding SelectedTrack, Mode=TwoWay}"
                            SetSelectingItemToCommandParameter="True"
                            ItemDoubleClickCommand="{Binding TrackListDoubleClickCommand, Mode=OneTime}">
                            <app:ListViewEx.ItemTemplate>
                                <DataTemplate DataType="{x:Type app:TrackInfo}">
                                    <Grid Grid.IsSharedSizeScope="True">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <app:GeometryIcon
                                            Margin="0,0,4,0"
                                            x:Name="PART_PlayingIcon"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Stretch"
                                            Data="{StaticResource MaterialIcons.VolumeUp}" />

                                        <TextBlock
                                            Margin="0,0,4,0"
                                            x:Name="PART_TrackNumber"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            TextWrapping="NoWrap"
                                            Text="{Binding TrackNumber, Mode=OneWay}" />

                                        <TextBlock
                                            Margin="4,0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            Text="{Binding Title, Mode=OneWay}"/>

                                        <TextBlock
                                            Margin="4,0"
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            TextAlignment="Right"
                                            Text="{Binding Duration, Mode=OneWay, Converter={StaticResource DurationConverter}}" />
                                    </Grid>

                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsPlaying, Mode=OneWay}" Value="True">
                                            <Setter TargetName="PART_PlayingIcon" Property="Visibility" Value="Visible" />
                                            <Setter TargetName="PART_TrackNumber" Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsPlaying, Mode=OneWay}" Value="False">
                                            <Setter TargetName="PART_PlayingIcon" Property="Visibility" Value="Collapsed" />
                                            <Setter TargetName="PART_TrackNumber" Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </app:ListViewEx.ItemTemplate>
                            <app:ListViewEx.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Padding" Value="8,4" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>

                                                            <Border
                                                                Grid.Row="0"
                                                                Padding="{TemplateBinding Padding}"
                                                                Background="{StaticResource ToolBar.Static.Background}"
                                                                TextBlock.FontWeight="Bold"
                                                                TextBlock.Foreground="{StaticResource ToolBar.Static.Foreground}">
                                                                <ContentPresenter
                                                                    ContentStringFormat="{}ディスク #{0}" />
                                                            </Border>

                                                            <ItemsPresenter
                                                                Grid.Row="1" />
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </app:ListViewEx.GroupStyle>
                            <app:ListViewEx.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource {x:Type ListViewItem}}">
                                    <Setter Property="Width" Value="{Binding ViewportWidth, Mode=OneWay, RelativeSource={RelativeSource AncestorType=ScrollViewer}}" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </app:ListViewEx.ItemContainerStyle>
                        </app:ListViewEx>
                    </Grid>
                </Grid>
            </Grid>

            <!--<Grid
                Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Image
                    Margin="10"
                    Width="84" Height="84"
                    Source="{Binding CurrentPlaylist.Album.Artwork, Mode=OneWay}"
                    RenderOptions.BitmapScalingMode="HighQuality" />

                <StackPanel
                    Margin="6,10,10,10"
                    Grid.Column="1"
                    VerticalAlignment="Top">
                    <TextBlock
                        FontWeight="Bold"
                        FontSize="20"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis"
                        Text="{Binding CurrentPlaylist.Album.Name, Mode=OneWay}" />

                    <TextBlock
                        Margin="0,4,0,0"
                        Text="{Binding CurrentPlaylist.Album.Artist, Mode=OneWay}" />

                    <TextBlock
                        Margin="0,4,0,0"
                        Text="{Binding CurrentPlaylist.Tracks.Count, Mode=OneWay, StringFormat='{}{0}件'}" />
                </StackPanel>

                <app:ListViewEx
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.ScrollUnit="Pixel"
                    VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    AlternationCount="2"
                    BorderThickness="0,1,0,0"
                    ItemsPanel="{StaticResource ItemsPanelTemplate}"
                    BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
                    ItemsSource="{Binding Source={StaticResource TracksCollectionViewSource}}"
                    SelectedItem="{Binding SelectedTrack, Mode=TwoWay}"
                    SetSelectingItemToCommandParameter="True"
                    ItemDoubleClickCommand="{Binding TrackListDoubleClickCommand, Mode=OneTime}">

                    <app:ListViewEx.View>
                        <GridView>
                            <GridViewColumn Header="#" Width="40">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <Grid>
                                            <app:GeometryIcon
                                                x:Name="PART_PlayingIcon"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Stretch"
                                                Data="{StaticResource MaterialIcons.VolumeUp}" />

                                            <TextBlock
                                                x:Name="PART_TrackNumber"
                                                HorizontalAlignment="Right"
                                                TextWrapping="NoWrap"
                                                Text="{Binding TrackNumber, Mode=OneWay}" />
                                        </Grid>

                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying, Mode=OneWay}" Value="True">
                                                <Setter TargetName="PART_PlayingIcon" Property="Visibility" Value="Visible" />
                                                <Setter TargetName="PART_TrackNumber" Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding IsPlaying, Mode=OneWay}" Value="False">
                                                <Setter TargetName="PART_PlayingIcon" Property="Visibility" Value="Collapsed" />
                                                <Setter TargetName="PART_TrackNumber" Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="タイトル" Width="310">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            Text="{Binding Title, Mode=OneWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="時間"
                                Width="60">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            TextAlignment="Right"
                                            Text="{Binding Duration, Mode=OneWay, Converter={StaticResource DurationConverter}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="アーティスト"
                                Width="100">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            Text="{Binding Artist, Mode=OneWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </app:ListViewEx.View>
                    <app:ListViewEx.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Padding" Value="8,4" />
                                    <Setter Property="Template">
                                        <Setter.Value>
