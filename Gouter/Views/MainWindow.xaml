<Window
    x:Class="Gouter.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Gouter.ViewModels"
    xmlns:app="clr-namespace:Gouter"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:rg="clr-namespace:SourceChord.ResponsiveGrid;assembly=ResponsiveGrid.Wpf"
    mc:Ignorable="d"
    Title="Gouter" Height="450" Width="800"
    UseLayoutRounding="True"
    FontFamily="Meiryo"
    DataContext="{app:ViewModelConnector vm:MainWindowViewModel}"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="ItemsPanelTemplate">
            <VirtualizingStackPanel Orientation="Vertical" />
        </ItemsPanelTemplate>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="ContentRendered">
            <i:InvokeCommandAction Command="{Binding InitializeCommand, Mode=OneTime}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel LastChildFill="True">
        <Border
            Height="55"
            DockPanel.Dock="Top"
            BorderThickness="0,0,0,1"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <DockPanel>
                <StackPanel
                    Margin="18,0"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Margin="3" Padding="6"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastRewind}" />
                    </Button>
                    <Button
                        Padding="12"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.PlayArrow}" />
                    </Button>
                    <!--<Button
                        Padding="12"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.Pause}" />
                    </Button>-->
                    <Button
                        Margin="3" Padding="6"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastForward}" />
                    </Button>
                </StackPanel>

                <StackPanel
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Padding="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="16" Height="16"
                            Data="{StaticResource MaterialIcons.VolumeUp}" />
                    </Button>

                    <Slider
                        Width="80"
                        Minimum="0.0" Maximum="1.0"
                        Value="1.0"
                        VerticalAlignment="Center" />
                </StackPanel>

                <DockPanel
                    Margin="12,0"
                    DockPanel.Dock="Left">
                    <Image
                        DockPanel.Dock="Left"
                        Height="54" Width="54">
                    </Image>

                    <Slider
                        Margin="6,0,6,6"
                        DockPanel.Dock="Bottom" />

                    <TextBlock
                        Margin="6"
                        DockPanel.Dock="Right"
                        VerticalAlignment="Center"
                        Text="0:00 / 0:00" />

                    <TextBlock
                        Margin="6"
                        Text="Title"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis" />
                </DockPanel>
            </DockPanel>
        </Border>

        <StatusBar
            Padding="4,2"
            DockPanel.Dock="Bottom"
            BorderThickness="0,1,0,0"
            FontFamily="Meiryo"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <StatusBarItem>
                <ProgressBar
                    Width="120"
                    Height="16"
                    Value="{Binding LoadProgress.CurrentCount, Mode=OneWay}"
                    Maximum="{Binding LoadProgress.MaxCount, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator
                Margin="8,2"
                Background="{StaticResource ToolBar.Static.BorderBrush}" />
            <StatusBarItem>
                <TextBlock Text="ステータス" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TabControl>
                <TabItem Header="アルバム">
                    <ListBox
                        DockPanel.Dock="Left"
                        Grid.Column="0"
                        BorderThickness="0"
                        SelectionMode="Single"
                        ItemsPanel="{StaticResource ItemsPanelTemplate}"
                        VirtualizingPanel.ScrollUnit="Item"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        ItemsSource="{Binding Albums, Mode=OneTime}"
                        SelectedItem="{Binding SelectedAlbum, Mode=TwoWay}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                <Setter Property="Padding" Value="8" />
                                <Setter Property="Height" Value="64" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </TabItem>
            </TabControl>

            <GridSplitter
                Grid.Column="1"
                Width="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Center"
                Background="{StaticResource ToolBar.Static.BorderBrush}" />

            <Grid
                Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Image
                    Margin="10"
                    Width="84" Height="84"
                    Source="{Binding CurrentPlaylist.Album.Artwork, Mode=OneWay}" />

                <StackPanel
                    Margin="6,10,10,10"
                    Grid.Column="1"
                    VerticalAlignment="Top">
                    <TextBlock
                        FontWeight="Bold"
                        FontSize="20"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis"
                        Text="{Binding CurrentPlaylist.Album.Name, Mode=OneWay}" />

                    <TextBlock
                        Margin="0,4,0,0"
                        Text="{Binding CurrentPlaylist.Album.Artist, Mode=OneWay}" />

                    <TextBlock
                        Margin="0,4,0,0"
                        Text="{Binding CurrentPlaylist.Tracks.Count, Mode=OneWay, StringFormat='{}{0}件'}" />
                </StackPanel>

                <ListBox
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
                    ItemsSource="{Binding CurrentPlaylist.Tracks, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <rg:ResponsiveGrid
                                Width="{Binding ViewportWidth, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type app:TrackInfo}">
                            <TextBlock>
                                 Disc:<Run Text="{Binding DiskNumber, Mode=OneTime}" /> / <Run Text="{Binding TrackNumber, Mode=OneWay}" /> / <Run Text="{Binding Title, Mode=OneWay}" />
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="rg:ResponsiveGrid.SM" Value="6" />
                            <Setter Property="rg:ResponsiveGrid.LG" Value="4" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ListBox>

                <!--<ListBox
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
                    ItemsSource="{Binding CurrentPlaylist.Tracks, Mode=OneWay}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="Width" Value="Auto" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>-->
            </Grid>
        </Grid>
    </DockPanel>
</Window>
