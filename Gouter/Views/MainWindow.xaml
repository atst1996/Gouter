<Window
    x:Class="Gouter.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Gouter.ViewModels"
    xmlns:app="clr-namespace:Gouter"
    mc:Ignorable="d"
    Title="Gouter" Height="450" Width="800"
    SnapsToDevicePixels="True"
    FontFamily="Meiryo"
    DataContext="{app:ViewModelConnector vm:MainWindowViewModel}"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel, IsDesignTimeCreatable=True}">
    <DockPanel LastChildFill="True">
        <Border
            Height="55"
            DockPanel.Dock="Top"
            BorderThickness="0,0,0,1"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <DockPanel>
                <StackPanel
                    Margin="18,0"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Padding="10"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastRewind}" />
                    </Button>
                    <Button
                        Padding="12"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.PlayArrow}" />
                    </Button>
                    <!--<Button
                        Padding="12"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.Pause}" />
                    </Button>-->
                    <Button
                        Padding="10"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastForward}" />
                    </Button>
                </StackPanel>

                <StackPanel
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Padding="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="16" Height="16"
                            Data="{StaticResource MaterialIcons.VolumeUp}" />
                    </Button>

                    <Slider
                        Width="80"
                        Minimum="0.0" Maximum="1.0"
                        Value="1.0"
                        VerticalAlignment="Center" />
                </StackPanel>

                <DockPanel
                    Margin="12,0"
                    DockPanel.Dock="Left">
                    <Image
                        DockPanel.Dock="Left"
                        Height="54" Width="54">
                    </Image>

                    <Slider
                        Margin="6,0,6,6"
                        DockPanel.Dock="Bottom" />

                    <TextBlock
                        Margin="6"
                        DockPanel.Dock="Right"
                        VerticalAlignment="Center"
                        Text="0:00 / 0:00" />
                    
                    <TextBlock
                        Margin="6"
                        Text="Title"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis" />
                </DockPanel>
            </DockPanel>
        </Border>

        <StatusBar
            Padding="4"
            DockPanel.Dock="Bottom"
            BorderThickness="0,1,0,0"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <StatusBarItem>
                <TextBlock Text="ステータス" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListBox
                DockPanel.Dock="Left"
                Grid.Column="0"
                BorderThickness="0">

            </ListBox>

            <GridSplitter
                Grid.Column="1"
                Width="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Center"
                Background="{StaticResource ToolBar.Static.BorderBrush}" />

            <Grid
                Grid.Column="2">
                
            </Grid>
        </Grid>
    </DockPanel>
</Window>
