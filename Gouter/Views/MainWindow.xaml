<Window
    x:Class="Gouter.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Gouter.Views"
    xmlns:vm="clr-namespace:Gouter.ViewModels"
    xmlns:app="clr-namespace:Gouter"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:b="clr-namespace:Gouter.Behaviors"
    xmlns:conv="clr-namespace:Gouter.Converters"
    mc:Ignorable="d"
    Title="Gouter" Height="450" Width="800"
    UseLayoutRounding="True"
    FontFamily="Meiryo"
    DataContext="{app:ViewModelConnector vm:MainWindowViewModel}"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="ItemsPanelTemplate">
            <VirtualizingStackPanel Orientation="Vertical" />
        </ItemsPanelTemplate>

        <conv:DurationConverter x:Key="DurationConverter" />
        <conv:MillisecondsToTimeStringConverter x:Key="MillisecondsToTimeStringConverter" />

        <CollectionViewSource
            x:Key="TracksCollectionViewSource"
            Source="{Binding CurrentPlaylist.Tracks, Mode=OneWay}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="DiskNumber" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="ContentRendered">
            <i:InvokeCommandAction Command="{Binding InitializeCommand, Mode=OneTime}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding OnCloseCommand, Mode=OneTime}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel LastChildFill="True">
        <Border
            Height="55"
            DockPanel.Dock="Top"
            BorderThickness="0,0,0,1"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <DockPanel>
                <StackPanel
                    Margin="18,0"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Margin="3" Padding="6"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastRewind}" />
                    </Button>
                    <Button
                        Padding="12"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Command="{Binding PlayCommand, Mode=OneTime}"
                        b:ElementBehavior.IsCollapse="{Binding Player.IsPlaying, Mode=OneWay}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.PlayArrow}" />
                    </Button>
                    <Button
                        Padding="12"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Command="{Binding PauseCommand, Mode=OneTime}"
                        b:ElementBehavior.Visible="{Binding Player.IsPlaying, Mode=OneWay}">
                        <app:GeometryIcon
                            Width="24" Height="24"
                            Data="{StaticResource MaterialIcons.Pause}" />
                    </Button>
                    <Button
                        Margin="3" Padding="6"
                        VerticalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="20" Height="20"
                            Data="{StaticResource MaterialIcons.FastForward}" />
                    </Button>
                </StackPanel>

                <StackPanel
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Padding="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <app:GeometryIcon
                            Width="16" Height="16"
                            Data="{StaticResource MaterialIcons.VolumeUp}" />
                    </Button>

                    <Slider
                        Width="80"
                        IsMoveToPointEnabled="True"
                        Minimum="0.0" Maximum="1.0"
                        Value="{Binding Player.Volumne, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel
                    Margin="12,0"
                    DockPanel.Dock="Right"
                    Orientation="Vertical"
                    VerticalAlignment="Center">
                    <CheckBox
                        Content="ループ再生"
                        IsChecked="{Binding IsLoop, Mode=TwoWay}" />

                    <CheckBox
                        Content="シャッフル再生" 
                        IsChecked="{Binding IsShuffle, Mode=TwoWay}" />
                </StackPanel>
                
                <DockPanel
                    Margin="18,0,12,0"
                    DockPanel.Dock="Left">
                    <Image
                        DockPanel.Dock="Left"
                        Height="54" Width="54"
                        b:TrackBehavior.AlbumArt="{Binding Player.CurrentTrack, Mode=OneWay}"
                        RenderOptions.BitmapScalingMode="HighQuality" />

                    <Slider
                        Margin="6,0,6,6"
                        Minimum="0"
                        IsMoveToPointEnabled="True"
                        Value="{Binding Player.CurrentTime, Mode=TwoWay}"
                        Maximum="{Binding Player.Duration, Mode=OneWay}"
                        ToolTip="{Binding Player.CurrentTime, Mode=OneWay, Converter={StaticResource MillisecondsToTimeStringConverter}}"
                        DockPanel.Dock="Bottom" />

                    <TextBlock
                        Margin="6"
                        DockPanel.Dock="Right"
                        VerticalAlignment="Center">
                        <Run Text="{Binding Player.CurrentTime, Mode=OneWay, Converter={StaticResource MillisecondsToTimeStringConverter}}" /><!--
                     --><Run Text=" / " /><!--
                     --><Run Text="{Binding Player.Duration, Mode=OneWay, Converter={StaticResource MillisecondsToTimeStringConverter}}" />
                    </TextBlock>

                    <TextBlock
                        Margin="12,6,6,6"
                        Text="{Binding Player.CurrentTrack.Title}"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis" />
                </DockPanel>
            </DockPanel>
        </Border>

        <StatusBar
            Padding="4,2"
            DockPanel.Dock="Bottom"
            BorderThickness="0,1,0,0"
            FontFamily="Meiryo"
            BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
            Background="{StaticResource ToolBar.Static.Background}">
            <StatusBarItem>
                <ProgressBar
                    Width="120"
                    Height="16"
                    Value="{Binding LoadProgress.CurrentCount, Mode=OneWay}"
                    Maximum="{Binding LoadProgress.MaxCount, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator
                Margin="8,2"
                Background="{StaticResource ToolBar.Static.BorderBrush}" />
            <StatusBarItem>
                <TextBlock Text="{Binding Status, Mode=OneWay}" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TabControl>
                <TabItem Header="アルバム">
                    <ListBox
                        DockPanel.Dock="Left"
                        Grid.Column="0"
                        BorderThickness="0"
                        SelectionMode="Single"
                        AlternationCount="2"
                        ItemsPanel="{StaticResource ItemsPanelTemplate}"
                        VirtualizingPanel.ScrollUnit="Item"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        ItemsSource="{Binding Albums, Mode=OneTime}"
                        SelectedItem="{Binding SelectedAlbum, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding DataContext.AlbumPlaylistSelectedCommand, Mode=OneTime, RelativeSource={RelativeSource AncestorType=view:MainWindow}}"  />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                <Setter Property="Padding" Value="8" />
                                <Setter Property="Height" Value="64" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </TabItem>
            </TabControl>

            <GridSplitter
                Grid.Column="1"
                Width="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Center"
                Background="{StaticResource ToolBar.Static.BorderBrush}" />

            <Grid
                Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Image
                    Margin="10"
                    Width="84" Height="84"
                    Source="{Binding CurrentPlaylist.Album.Artwork, Mode=OneWay}"
                    RenderOptions.BitmapScalingMode="HighQuality" />

                <StackPanel
                    Margin="6,10,10,10"
                    Grid.Column="1"
                    VerticalAlignment="Top">
                    <TextBlock
                        FontWeight="Bold"
                        FontSize="20"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis"
                        Text="{Binding CurrentPlaylist.Album.Name, Mode=OneWay}" />

                    <TextBlock
                        Margin="0,4,0,0"
                        Text="{Binding CurrentPlaylist.Album.Artist, Mode=OneWay}" />

                    <TextBlock
                        Margin="0,4,0,0"
                        Text="{Binding CurrentPlaylist.Tracks.Count, Mode=OneWay, StringFormat='{}{0}件'}" />
                </StackPanel>

                <ListView
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.ScrollUnit="Pixel"
                    VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    AlternationCount="2"
                    BorderThickness="0,1,0,0"
                    ItemsPanel="{StaticResource ItemsPanelTemplate}"
                    BorderBrush="{StaticResource ToolBar.Static.BorderBrush}"
                    ItemsSource="{Binding Source={StaticResource TracksCollectionViewSource}}"
                    SelectedItem="{Binding SelectedTrack, Mode=TwoWay}">
                    <i:Interaction.Behaviors>
                        <b:ListViewFillColumnBehavior FillColumnIndex="1" />
                    </i:Interaction.Behaviors>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding DataContext.TrackListDoubleClickCommand, Mode=OneTime, RelativeSource={RelativeSource AncestorType=view:MainWindow}}"  />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="#" Width="40">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <Grid>
                                            <app:GeometryIcon
                                                x:Name="PART_PlayingIcon"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Stretch"
                                                Data="{StaticResource MaterialIcons.VolumeUp}" />

                                            <TextBlock
                                                x:Name="PART_TrackNumber"
                                                HorizontalAlignment="Right"
                                                TextWrapping="NoWrap"
                                                Text="{Binding TrackNumber, Mode=OneWay}" />
                                        </Grid>

                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying, Mode=OneWay}" Value="True">
                                                <Setter TargetName="PART_PlayingIcon" Property="Visibility" Value="Visible" />
                                                <Setter TargetName="PART_TrackNumber" Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding IsPlaying, Mode=OneWay}" Value="False">
                                                <Setter TargetName="PART_PlayingIcon" Property="Visibility" Value="Collapsed" />
                                                <Setter TargetName="PART_TrackNumber" Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="タイトル">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            Text="{Binding Title, Mode=OneWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="時間"
                                Width="60">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            TextAlignment="Right"
                                            Text="{Binding Duration, Mode=OneWay, Converter={StaticResource DurationConverter}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="アーティスト"
                                Width="120">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type app:TrackInfo}">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            Text="{Binding Artist, Mode=OneWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Padding" Value="8,4" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Grid
                                                    Width="{Binding ViewportWidth, Mode=OneWay, RelativeSource={RelativeSource AncestorType=ScrollViewer}}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Border
                                                        Grid.Row="0"
                                                        Padding="{TemplateBinding Padding}"
                                                        Background="{StaticResource ToolBar.Static.Background}"
                                                        TextBlock.FontWeight="Bold"
                                                        TextBlock.Foreground="{StaticResource ToolBar.Static.Foreground}">
                                                        <ContentPresenter
                                                            ContentStringFormat="{}ディスク #{0}" />
                                                    </Border>

                                                    <ItemsPresenter
                                                        Grid.Row="1"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource {x:Type ListViewItem}}">
                            <Setter Property="Width" Value="{Binding ViewportWidth, Mode=OneWay, RelativeSource={RelativeSource AncestorType=ScrollViewer}}" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
